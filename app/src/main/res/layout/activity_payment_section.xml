<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentSection">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Enter payment details"
        android:textColor="@color/darkgrey"
        android:textSize="26dp"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="100dp"
        android:contentDescription="TODO"
        android:src="@drawable/color"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded">

    </ImageView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Have Fun !!"
        android:textColor="@color/darkgrey"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="593dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="40dp"
        tools:ignore="RtlHardcoded">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/darkgrey"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/violet"
            app:hintTextColor="@color/darkgrey"
            app:startIconDrawable="@drawable/baseline_drive_file_rename_outline_24"
            app:startIconTint="@color/darkgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBankName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter bank name"
                android:textColor="@color/darkgrey"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/darkgrey"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/violet"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/darkgrey"
            app:hintTextColor="@color/darkgrey"
            app:startIconDrawable="@drawable/baseline_add_home_work_24"
            app:startIconTint="@color/darkgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAccountNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter bank a/c No."
                android:textColor="@color/darkgrey"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/darkgrey"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/violet"
            app:hintTextColor="@color/darkgrey"
            app:startIconDrawable="@drawable/baseline_add_home_work_24"
            app:startIconTint="@color/darkgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIFSC"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter bank IFSC code"
                android:textColor="@color/darkgrey"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:minHeight="48dp"
            android:text="Do you want smooth payment (0.5/-)"
            android:textColor="#ff3399"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml,VisualLintOverlap" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/darkgrey"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/violet"
            app:hintTextColor="@color/darkgrey"
            app:startIconDrawable="@drawable/baseline_mail_outline_24"
            app:startIconTint="@color/darkgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your mail"
                android:textColor="@color/darkgrey"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="305dp"
            android:text="Choose Apartments"
            android:textColor="@color/darkgrey"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,VisualLintOverlap">

        </TextView>

        <RadioGroup
            android:layout_width="400dp"
            android:layout_height="410dp"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck,VisualLintBounds">


            <RadioButton
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="335dp"
                android:text="4999/- (Casual)"
                android:textColor="@color/darkgrey"
                android:textColorLink="@color/blue"
                app:hintTextColor="@color/darkgrey"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="335dp"
                android:text="6999/- (Premium)"
                android:textColor="@color/darkgrey"
                app:hintTextColor="@color/darkgrey"
                tools:ignore="HardcodedText" />


        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="395dp"
            android:text="Choose Meals"
            android:textColor="@color/darkgrey"
            android:textSize="15dp"
            android:textStyle="bold"
            app:hintTextColor="@color/darkgrey"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,VisualLintOverlap">


        </TextView>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="609dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="420dp"
                android:text="1499/- (Casual)"
                android:textColor="@color/darkgrey"
                android:textColorHint="@color/blue"
                app:hintTextColor="@color/darkgrey"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="420dp"
                android:text="1999/- (Special Meal)"
                android:textColor="@color/darkgrey"
                app:hintTextColor="@color/darkgrey"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonSuccess"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="480dp"
            android:backgroundTint="@color/blue"

            android:text="Complete payment"
            android:textColor="@color/darkgrey"
            tools:ignore="HardcodedText,RtlHardcoded">

        </Button>

        <Button
            android:id="@+id/buttonToReceipt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="530dp"
            android:backgroundTint="@color/blue"
            android:text="Download Receipt"
            android:textColor="@color/darkgrey"
            tools:ignore="HardcodedText,RtlHardcoded">

        </Button>

    </androidx.cardview.widget.CardView>



    </RelativeLayout>


